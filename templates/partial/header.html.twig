<header>
    <a href="{{ path('app_index') }}">
        <img src="{{ asset('LOGO_2.svg') }}" alt="logo" width="100" height="100" />
    </a>
    <nav>
        <a href="{{ path('app_shop') }}">Shop</a>
        {% if app.user %}
        {{ app.user.name }}
        {% endif %}
        <div>

            {% if app.user %}
            <a href="{{ path('app_logout') }}"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
            {% else %}
                <a href="{{ path('app_login') }}"><i class="fa-solid fa-user"></i></a>
            {% endif %}
            <a href="{{ path('app_cart') }}"><i class="fa-solid fa-cart-shopping"></i></a>
        </div>
    </nav>
</header>