{% extends 'base.html.twig' %}

{% block body %}

    {% if items | length > 0 %}
        <h1>Mon panier</h1>
            <table>
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                    </tr>
                </thead>

                <tbody>
        {% for item in items  %}

                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }} €</td>
                        <td><a href="{{ path('app_cart_remove', {'id' : item.product.id}) }}"><i class="fa-solid fa-trash"></i></a></td>
                    </tr>
                </tbody>
            </table>
        {% endfor %}
    {% else %}
        <p>Le panier est vide.</p>
    {% endif %}
{% endblock %}